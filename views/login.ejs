<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Users</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/users.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;500;600;700;800&family=Spectral:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet">

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/users.js"></script>
  </head>

  <body>

    <%- include('partials/_header') %>

      <div class="login-container">
        <div class="login-left-page">
        </div>
        <div class="login-right-page">
          <form method="POST" action="/login" class="login-form">
            <h2>Welcome back!</h2>
            <label class="login-title">Email:</label>
            <input class="login-input" type="email" name="email" placeholder="Type your email" required>

            <label class="login-title">Enter Password:</label>
            <input class="login-input" type="password" name="password" placeholder="Type your password" required>

            <button class="submit-btn">Submit</button>
            <p>Don't have an account? <a href="/register" class="register-link">Sign Up!</a></p>
          </form>
        </div>
      </div>

  </body>

</html>