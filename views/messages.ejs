<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Keegeegee - Buy/Sell</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;500;600;700;800&family=Spectral:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet">

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/users.js"></script>
    <script defer src="/scripts/app.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"
      integrity="sha512-X/YkDZyjTf4wyc2Vy16YGCPHwAY8rZJY+POgokZjQB2mhIRFJCckEGc6YyX9eNsPfn0PzThEuNs+uaomE5CO6A==" crossorigin="anonymous"
      referrerpolicy="no-referrer"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
      <div class="card">
        <div class="card-header">
          My messages
        </div>
        <div class="card-body" id="msgCardBody">
          <% for (let i=0; i < result.length; i++) { %>
            <div class="card mb-3">
              <div class="row g-0">
                <div class="col-md-4">
                  <img src="<%= result[i].imageurl %>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= result[i].itemtitle %>
                    </h5>
                    <p class="card-text">
                      <%= result[i].content %>
                    </p>
                    <p class="card-text"><small class="text-body-secondary">
                        <%= result[i].fromusername %>
                      </small></p>
                    <p class="card-text"><small class="text-body-secondary">
                        <%= result[i].created_at %>>
                      </small></p>
                    <button type="button" class="btn btn-primary" id="msgReBtn_<%= result[i].id %>" name="msgReBtn"
                      value="<%= result[i].from_user_id %>,<%= result[i].id %>,<%= result[i].item_listing_id %>,<%= result[i].fromusername %>">Reply
                      this message</button>
                  </div>
                </div>
              </div>
            </div>
            <% }%>
        </div>
      </div>
      <div class="modal fade" id="msgModal" tabindex="-1" aria-labelledby="msgModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="msgModalLabel">Reply this message</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="msgModalForm">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="recipient-name" class="col-form-label">Recipient:</label>
                  <input type="text" class="form-control" id="recipient-name">
                </div>
                <div class="mb-3">
                  <label for="message-text" class="col-form-label">Message:</label>
                  <textarea class="form-control" id="message-text"></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="msgModalSubmit">Send message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
  </body>

</html>