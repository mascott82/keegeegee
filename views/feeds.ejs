<!DOCTYPE html>
<html lang="en">

<head>
  <title>Keegeegee - Buy/Sell</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <h1>Feeds</h1>
  <div class="container-fluid">
    <form id="searchForm" action="/s/search" method="post">
      <div class="input-group mb-3" id="searchBox">
        <span class="input-group-text" id="inputGroup-sizing-default">Looking for price: </span>
        <span class="input-group-text" id="inputGroup-sizing-default">from: $</span>
        <input id="minPrice" name="minPrice" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <span class="input-group-text" id="inputGroup-sizing-default">to: $</span>
        <input id="maxPrice" name="maxPrice" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <button class="btn btn-outline-secondary" type="submit" id="searchBtn">Search</button>
      </div>
    </form>
    <div id="feedsList">
      <% for (let i = 0; i < feeds.length; i++) { %>
        <div class="card mb-3" id="cardbox_<%= feeds[i].id %>">
          <div class="card-body">
            <img src="<%= feeds[i].image_url %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= feeds[i].title %></h5>
              <p class="card-text"><%= feeds[i].description %></p>
              <div class="btn-group" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-success" value="<%= feeds[i].id %>" id="fav_<%= feeds[i].id %>">Mark as my favourite</button>
                <button type="button" class="btn btn-primary" value="<%= feeds[i].id %>" id="msg_<%= feeds[i].id %>">Leave a message</button>
                <button type="button" class="btn btn-warning" value="<%= feeds[i].id %>" id="sold_<%= feeds[i].id %>">Mark as sold</button>
                <button type="button" class="btn btn-danger" value="<%= feeds[i].id %>" id="del_<%= feeds[i].id %>">Delete</button>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>

</html>
